@model List<User>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="user">

        <div class="header">
            <div class="row">
                <div class="col-12">
                    <h1>İstifadəçilər</h1>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("create","user")" class="btn btn-primary">İstifadəçi Əlavə et</a>
                </div>
                <div class="col-md-6">
                    <input placeholder="Axtar" />
                    <button id="SearchUse" class="btn btn-success">Axtar</button>
                </div>
            </div>
        </div>

        <div class="customer-list col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr >
                        <th></th>
                        <th>Ad Soyad</th>
                        <th>İstifadəçi adı</th>
                        <th>Vəzifə</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @{var a = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(a++)</td>
                            <td>
                                <h6>@item.FullName</h6>
                            </td>

                            <td>
                                <h6>@item.UserName</h6>
                            </td>
                            <td>
                                <h6>@item.UserRol.UserType</h6>
                            </td>
                            <td>

                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-secondary far fa-edit bigger-10" })

                                <a onclick="return confirm('@item.FullName Silməyə əminsiniz? ')" href="@Url.Action("delete", new { id=item.Id})" class="far fa-trash-alt btn btn-danger"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@model User
@{
    ViewBag.Title = "Edit";
}

<div class="page">
    <div id="user">
        <div class="header">
            <div class="col-6">
                <h1>Istifadəçi Yenilə</h1>
            </div>
        </div>
        <div class="create col-md-4">
            <form method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    @Html.LabelFor(m => m.FullName)
                    @Html.TextBoxFor(m => m.FullName, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserRolId)
                    @Html.DropDownListFor(m => m.UserRolId, new SelectList(ViewBag.UserRol, "Id", "usertype"), new { @class = "form-control", @type = "password" })

                    @Html.ValidationMessageFor(m => m.UserRolId, "", new { @class = "text-danger" })

                </div>
                <div class="form-row">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success">Yenilə</button>

                    </div>
                </div>
            </form>
        </div>
        <div> @Html.ActionLink("Geriyə qayıt", "index")</div>
    </div>
</div>
@model List<Room>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="room">
        <div class="header">
                <div class="col-12">
                    <h1>Otaqlar</h1>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("create","rooms")" class="btn btn-primary">Əlavə et</a>
                </div>
        </div>
        <div class="room-list">
            <table class="table table-hover">
                <thead>
                    <tr><th></th>
                        <th>Şəkil</th>
                        <th>Otaq nömrəsi</th>
                        <th>Böyük sayı</th>
                        <th>Uşaq sayı</th>
                        <th>Yataq növü</th>
                        <th>Haqqında</th>
                        <th>Status</th>
                        <th>Qiymət</th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{var a = 1;}
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@(a++)</td>
                        <td>
                            <div class="photo" style="height:60px;width:60px;">
                                <img src="~/Upload/@item.Photo" alt="" height="50" width="50">
                            </div>
                        </td>
                        <td>
                            <h6>@item.Number</h6>
                        </td>
                        <td>
                            <h6>@item.PersonCapacity</h6>
                        </td>
                        <td>
                            <h6>@item.ChildCapacity</h6>
                        </td>
                        <td>
                            <h6>@item.BedType.TypeName</h6>
                        </td>
                        <td>
                            @item.Desc
                        </td>
                        <td>
                            @if (item.Status == false)
                            {<h6 class="sts p-2" style="background-color:red;color:white;">Dolu</h6> }
                            else
                            {<h6 class="sts p-2" style="background-color:green;color:white;">Boş</h6>}
                        </td>
                        <td>
                            <h6 class="price p-1">@item.Price.ToString("0.00") azn</h6>
                        </td>

                        <td>
                            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-mini btn-info fas fa-info-circle bigger-10" })
                            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-secondary far fa-edit bigger-10" })
                            <a onclick="return confirm('Silməyə əminsiniz? ')" href="@Url.Action("delete", new { id=item.Id})" class="far fa-trash-alt btn btn-danger"></a>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@model List<Customer>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">

                <div class="col-12">
                    <h1>Müştərilər</h1>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("create","customer")" class="btn btn-primary">Əlavə et</a>
                </div>
                <div class="col-md-6">
                    <input placeholder="Axtar" />
                    <button id="SearchCus" class="btn btn-success">Axtar</button>
                </div>
            </div>
        </div>

        <div class="customer-list">
            <table class="table table-hover">
                <thead>
                    <tr>

                        <th></th>
                        <th>Ad Soyad</th>
                        <th>Pasport</th>
                        <th>Telefon nömrəsi</th>
                        <th>Çıxıb</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                                @{var a = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(a++)</td>
                                        <td>
                                            <h6>@item.Fullname</h6>
                                        </td>
                                        <td>
                                            <h6>@item.Passportcode</h6>
                                        </td>
                                        <td>
                                            <h6>@item.Phonenumber</h6>
                                        </td>

                                        <td>
                                            <h6>
                                                @if (item.IsDelete == true)
                                                {
                                                    <span class="price p-2" style="color:white;background-color:red;">Bəli</span>
                                                }
                                                else
                                                {
                                                    <span class="price p-2" style="color:white;background-color:green;">Xeyr</span>
                                                }
                                            </h6>
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-secondary far fa-edit bigger-10" })

                                            <a onclick="return confirm('@item.Fullname Silməyə əminsiniz? ')" href="@Url.Action("delete", new { id = item.Id })" class="far fa-trash-alt btn btn-danger"></a>
                                        </td>
                                    </tr>
                                }



                            </tbody>
            </table>
        </div>



    </div>
</div>
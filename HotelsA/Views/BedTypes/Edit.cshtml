@model BedType
@{
    ViewBag.Title = "Edit";
}

<div class="page">
    <div id="bedtype">

        <div class="header">
            <div class="row">
                <div class="col-md-4">
                    <h1>Yenilə</h1>
                </div>

            </div>
        </div>


        <div class="create col-md-4">
            <form method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group">
                    @Html.LabelFor(m => m.TypeName)
                    @Html.TextBoxFor(m => m.TypeName, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TypeName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Yenilə" class="btn btn-success" />
                    </div>
                </div>

            </form>
        </div>
        @Html.ActionLink("Geriyə qayıt", "index")
    </div>
</div>
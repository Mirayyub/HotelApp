@model List<RestourantOrder>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="restoran">

        <div class="header">
           
                <div class="col-12">
                    <h1>Sifariş</h1>
                </div>
                <div class="col-3">
                    <a href="@Url.Action("create","restourant")" class="btn btn-primary">Sifariş Et</a>
                </div>

            
        </div>

        <div class="customer-list">
            <table class="table table-hover">
                <thead>
                    <tr >
                        <th>Otaq</th>
                       
                        <th>Məhsul</th>
                        <th>Say</th>
                        <th>Ödəniləcək Məbləğ</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           
                            <td>
                                <h6>@item.Room.Number</h6>
                            </td>

                            <td>
                                <h6>@item.Food.Name</h6>
                            </td>
                            <td>
                                <h6>@item.FoodCount</h6>
                            </td>
                            <td>
                                <h6>@(item.FoodCount * @item.Food.Price) azn</h6>
                            </td>

                            <td>

                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-secondary far fa-edit bigger-10" })

                                <a onclick="return confirm('@item.Room.Number otağının sifarişini silməyə əminsiniz? ')" href="@Url.Action("delete", new { id = item.Id })" class="far fa-trash-alt btn btn-danger"></a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>



    </div>
</div>
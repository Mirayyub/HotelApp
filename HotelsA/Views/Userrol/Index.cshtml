@model List<UserRol>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="userrol">

        <div class="header">
            <div class="row">
                <div class="col-12">
                    <h1>Vəzifələr</h1>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("create","userrol")" class="btn btn-primary">Əlavə et</a>
                </div>
               
            </div>
        </div>

        <div class="customer-list">
            <table class="table table-hover col-md-6">
                <thead>
                    <tr>
                        
                        <th>Vəzifə</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="col-md-6">
                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td>
                                <h6>@item.UserType</h6>
                            </td>
                            <td>

                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-secondary far fa-edit bigger-10" })

                                <a onclick="return confirm('@item.UserType Silməyə əminsiniz? ')" href="@Url.Action("delete", new { id = item.Id })" class="far fa-trash-alt btn btn-danger"></a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>